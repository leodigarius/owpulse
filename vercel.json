{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "routes": [
    { "src": "^/checkin/?$", "dest": "/checkin/index.html" },
    { "src": "^/admin/?$", "dest": "/admin/index.html" },
    { "src": "^/manager/?$", "dest": "/manager/index.html" },
    { "src": "^/dashboard/?$", "dest": "/dashboard/index.html" },
    { "src": "^/(?!_next|static).*$", "dest": "/index.html" }
  ]
} 